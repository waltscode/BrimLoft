{{!-- List all orders (could be an admin feature)--}}

<h1>All Orders</h1>
{{#each orders}}
  <div class="order-summary">
    <h3><a href="/order/{{this.id}}">Order #{{this.id}}</a></h3>
    <p>Date: {{formatDate this.createdAt}}</p>
    <p>Total: {{formatCurrency this.total}}</p>
    <p>Status: {{this.status}}</p>
  </div>
{{else}}
  <p>No orders have been placed.</p>
{{/each}}
