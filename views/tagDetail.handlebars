{{!-- Shows all products associated with a specific tag --}}
<h2>Products tagged with "{{tag.name}}"</h2>
<div class="products-by-tag">
  {{#each products}}
    <div class="product">
      <img src="{{this.imageUrl}}" alt="{{this.name}}">
      <h3><a href="/product/{{this.id}}">{{this.name}}</a></h3>
      <p>{{truncate this.description 120}}</p>
      <p>Price: {{formatCurrency this.price}}</p>
    </div>
  {{/each}}
</div>
