{{!-- User Orders List all orders associated with a specific user--}}
<h2>{{user.username}}'s Orders</h2>
{{#each orders}}
  <div class="order-summary">
    <h3>Order #{{this.id}}</h3>
    <p>Date: {{formatDate this.createdAt}}</p>
    <p>Total: {{formatCurrency this.total}}</p>
    <a href="/order/{{this.id}}">View Details</a>
  </div>
{{else}}
  <p>No orders found.</p>
{{/each}}
